FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0  1 0 0 0];


internalField   uniform 0;

boundaryField
{
top
    {
        type            fixedGradient;
        gradient        uniform -0.00981;
    }
bottom
    {
        type            fixedGradient;
        gradient        uniform 0.00981;
    }
    left
    {
        type            zeroGradient;
    }
    right
    {
         type           zeroGradient;
    }
    frontandback
    {
        type            empty;
    }
}


